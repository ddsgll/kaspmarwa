.main_menu
	width 100%
	// height 64px
	text-align center
	z-index 1000
	transition all .3s ease
	top 80px
	
	
	*
		transition all .3s ease

	@media screen and (max-width 1300px)
		display none
		
	nor =
		height 48px
		margin 0
	big =
		height 64px
		margin 0
	adapt(1,1,nor,big)
	
	
	
	ul
		list-style none
		margin 0
		padding 0
		width 100%
		text-align justify
		
		li 
			{clean}
			display inline-block
			vertical-align middle
			text-transform uppercase
			font-weight bold
			top 0
			transition all .3s ease
			
			sm =
				font-size 14px
			nor =
				font-size 16px
			big =
				font-size 18px
			adapt(sm,sm,nor,big)
				
			a 
				color #fff
				transition all .3s ease
				
			&.image
				&::after
					display none
				&:hover
					top 0
					
				img
					max-height 100%
					
					sm = 
						height 80px
					nor =
						height 120px
					big =
						height 160px
						
					adapt(sm,sm,nor,big)
					
			&.image_float
				display none
				
				&::after
					display none
				&:hover
					top 0
			
			&.helper
				display inline-block
				vertical-align middle
				width 100%
				
				&::after
					display none
					
			&::after
				{after}
				bottom -6px
				left 0
				height 2px
				width 0%
				background gold
				transition all .3s ease
				
				sm =
					bottom -11px
				nor =
					bottom -9px
				big =
					bottom -6px
				adapt(sm,sm,nor,big)
				
			&:hover
				top -8px 
				
				&::after
					width 80%
				
				> a 
					color gold
					
				.submenu
					opacity 1
					transform perspective(2000) rotateY(0deg)
					
	&.floated
		margin 0
		background #fff
		position fixed
		top 0
		left 0
		height 72px
		border-bottom 1px solid main_blue
		color main_blue
		z-index 1000
		
		sm = 
			height 32px
			margin 0
		mid =
			height 48px
			margin 0
		nor =
			height 72px
			margin 0
		big =
			height 72px
			margin 0
		adapt(sm,mid,nor,big)
		
		ul
			li 
				> a
					color main_blue

				&.image
					display none
				&.image_float
					height 72px
					display inline-block
					
					img
						
						sm = 
							height 48px
						nor =
							height 64px
						big =
							height 64px
							
						adapt(sm,sm,nor,big)
					
	&.inner
		top 48px

		&.scrolled
			top 0px
					
.submenu
	display block
	width 260px
	// height 0px
	background main_blue_semitrans
	position absolute
	top 33px
	left 0
	padding 24px
	text-align left
	border-left 2px solid gold
	overflow hidden
	opacity 0
	transition all .4s .2s ease
	transform-origin 0% 50%
	transform perspective(1000) rotateY(90deg)

	a 
		display inline-block
		width 95%
		top 0
		left 0
		color #fff
		padding 8px 0
		text-transform none
		font-weight normal
		font-size 16px
		opacity 1
		transition all .2s .4s ease
					
		&::before
			{after}
			display inline-block
			position absolute
			top 14px
			left -5px
			opacity 0
			vertical-align middle
			width 5px
			height 10px
			background transparent url('../img/icons/sub_orange.png') no-repeat center
			transition all .3s ease
			
		&:hover
			top 0
			padding-left 10px
			color gold
			
			&::before
				opacity 1
				left 0

.no-supports.csstransforms3d
	.submenu
		height 20px
		transition all 0s ease
	.main_menu
		li:hover
			.submenu
				height auto