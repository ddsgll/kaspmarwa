.photogallery
	padding 24px 0
	reset-inline()
	
	.photo 
		width 33%
		display inline-block
		padding 0
		overflow hidden	
		cursor pointer
		
		opacity .3
		transition all .5s cubic-bezier(.25,.25,0,1)
		transform(perspective(1500) rotateX(-90deg) scale(.8,.8))
		t_origin(50% 0%)
		
		&.visible,
		&:hover
			opacity 1
			transform(perspective(1500) rotateX(0deg))

		&::before
			{after}
			width 64px
			height 64px
			top 50%
			left 50%
			margin-top -32px
			margin-left -32px
			opacity 0
			background url('../img/icons/photozoom.png') no-repeat center
			z-index 500
			transition all .5s ease
		
		&::after
			{after}
			width 100%
			height 100%
			top 0
			left 0
			background rgba(0,0,0,0)
			transition background .4s ease		
		
		img 
			display inline-block
			width 100%
			max-width 100%
			transition all 6s cubic-bezier(.25,.25,0,1)
			transform( scale(1,1) )
			
		&:hover img
			transform( scale(1.2,1.2) )
			
		&:hover::after
			background rgba(0,0,0,.6)
			
		&:hover::before
			opacity 1
			

.photosplash
	overflow hidden
	position fixed
	width 100%
	height 0
	top 0
	left 0
	background rgba(0,0,0,.8)
	z-index 99999
	reset-inline()
	
	.close
		position absolute
		width 48px
		height 48px
		top 16px
		left 50%
		margin-left -24px
		cursor pointer
		background url('../img/icons/crossgallery.png') no-repeat center
		transition all .3s ease
		
		&:hover
			transform(rotate(90deg));
	
	.photoview
		width 100%
		height 80%
		margin-top 8%
		
		img
			max-width 100%
			width auto
			margin 0 50%
			display inline-block
			vertical-align middle