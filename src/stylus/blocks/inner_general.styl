.inner_content
	overflow hidden

.breadcumbs
	padding 24px 0
	font-size 14px
	color #808080
	font-family 'arial'
	
	a 
		color main_blue
		text-decoration underline
		
.inner_title
	h1
		display inline-block
		font-size 36px
		text-transform uppercase
		font-weight normal
		color main_blue
		line-height 1
		
		&::after
			{after}
			top 24px
			right 102%
			width 2000px
			height 1px
			background main_blue
			
		&::before
			@extend .inner_title h1::after
			
			right auto
			left 102%
			
.pagination
	{boblic}
	text-align center
	width 100%
	padding 32px 0
	
	span,a
		display inline-block
		vertical-align middle
		margin 0 16px
		
	a
		color #808080
		text-decoration none
		font-size 24px
		transition all .3s ease
		
		&:hover
			color main_blue
			
	.btn
		width 32px
		height 32px
		background main_blue
		color #fff
		line-height 32px
		
		&:hover
			color #fff