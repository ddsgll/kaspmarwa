.otz
	
	.item
		border 1px solid #eee
		box-shadow 0px 5px 12px rgba(0,0,0,.1)
		margin 16px 16px 16px 48px
		padding 16px
		
		.photo
			position absolute
			top -20px
			left -20px
			width 100px
			height 100px
			background red
			overflow hidden
			text-align center
			
			img
				max-height 100%
			
		.title
			border-bottom 1px solid #ccc
			margin-left 80px
			top -1px
			
			h2
				font-size 24px
				color main_blue
				font-style normal
				text-transform none
				font-weight normal
				
				sm =
					font-size 18px
					margin-top 4px
				adapt(sm)
				
			h3
				font-size 18px
				color #999
				text-transform none
				font-weight normal
				margin-top 16px
				
				sm =
					font-size 16px
					margin-top 22px
				adapt(sm)
			
		.text
			margin-top 8px
			
			&::after
				{after}
				left -56px
				top -4px
				width 32px
				height 24px
				background url('../img/icons/quotes.png') no-repeat center
			
			p 
				font-family 'arial'
				font-style italic
				color #999
				font-size 15px
				line-height 1.5
				
				sm =
					font-size 12px
					font-style normal
				adapt(sm)
				
	.all_otz
		{boblic}
		text-transform uppercase
		text-align center
		color salad
		line-height 1
		font-size 24px
		padding 20px 24px 16px 24px
		display inline-block
		border 2px solid salad
		transition all .3s ease
		margin 16px 0
		
		&:hover
			background salad
			color #fff
		